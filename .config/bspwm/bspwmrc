#!/bin/sh


source ~/.r809env 
xrandr --output $monitor1 --auto --output $monitor2 $monitorOpt $monitor1 
sxhkd &
compton --backend glx --paint-on-overlay --glx-no-stencil --vsync opengl-swc --unredir-if-possible --blur-background&
dnust &
fcitx-autostart &
polybar-all-screen &
feh --randomize --bg-fill ~/Pictures/Wallpapers/* &
bash ~/bin/TouchpadInit  &
randr --dpi 120 &

bspc monitor -d 雜項 通訊 


bspc config border_width         0
bspc config window_gap          6

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config presel_feedback_color "#777777"
bspc config focus_follows_pointer true

bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
